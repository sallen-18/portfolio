---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<Base title={`${project.data.title} - Sam`} description={project.data.description}>
  <article>
    <header>
      <a href="/projects" class="back"><span class="arrow">&larr;</span> Back to projects</a>
      <h1>{project.data.title}</h1>
      <div class="meta">
        <time>
          {project.data.date.toLocaleDateString('en-GB', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        {project.data.tags.length > 0 && (
          <div class="tags">
            {project.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="github-link"><svg class="gh-icon" viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8z"/></svg> View on GitHub</a>
      </div>
    </header>

    {project.data.youtubeId && (
      <div class="video-embed">
        <iframe
          src={`https://www.youtube-nocookie.com/embed/${project.data.youtubeId}`}
          title="Demo video"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    )}

    <div class="prose">
      <Content />
    </div>
  </article>
</Base>

<style>
  article {
    padding-bottom: 3rem;
  }

  .back {
    display: inline-block;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }

  .back:hover {
    color: var(--color-accent-hover);
  }

  .back .arrow {
    display: inline-block;
    transition: transform 0.2s;
  }

  .back:hover .arrow {
    transform: translateX(-4px);
  }

  h1 {
    font-size: 2rem;
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .tags {
    display: flex;
    gap: 0.4rem;
  }

  .tag {
    background: var(--color-bg-alt);
    padding: 0.15em 0.55em;
    border-radius: 0.25rem;
    font-size: 0.8rem;
    border: 1px solid var(--color-border);
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.9rem;
  }

  .github-link :global(.gh-icon) {
    width: 1em;
    height: 1em;
  }

  .video-embed {
    position: relative;
    padding-bottom: 56.25%;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .prose :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.35rem;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .prose :global(img) {
    margin: 1.5rem 0;
  }
</style>
