---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<Base title="Sam - Cloud Portfolio">
  <section class="hero">
    <h1>Hey, I'm Sam</h1>
    <p>
      I build things in the cloud and write about what I learn along the way.
      This site is a collection of projects, architecture diagrams, and demo
      videos.
    </p>
    <div class="view-counter">
      <span id="view-count">â€”</span> visits
    </div>
  </section>

<script>
    const API_ENDPOINT = import.meta.env.PUBLIC_API_ENDPOINT;
    
    fetch(API_ENDPOINT)
        .then(res => res.json())
        .then(data => {
            // Simplified - data is already {"count": 12}
            const el = document.getElementById('view-count');
            if (el) el.textContent = data.count.toLocaleString();
        })
        .catch(err => console.error('Visitor counter failed:', err));
</script>

  {projects.length > 0 && (
    <section class="recent">
      <h2>Recent Projects</h2>
      <ul class="project-list">
        {projects.map((project) => (
          <li class="project-card">
            <img src={project.data.image} alt={project.data.title} class="project-thumb" />
            <div class="project-info">
              <span class="project-title">{project.data.title}</span>
              <p class="project-desc">{project.data.description}</p>
              <div class="project-meta">
                <time>
                  {project.data.date.toLocaleDateString('en-GB', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
                {project.data.tags.length > 0 && (
                  <div class="tags">
                    {project.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              <div class="project-actions">
                <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="github-link"><svg class="gh-icon" viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8z"/></svg> GitHub</a>
                <a href={`/projects/${project.id}`} class="details-link">View details <span class="arrow">&rarr;</span></a>
              </div>
            </div>
          </li>
        ))}
      </ul>
      <a href="/projects" class="view-all">View all projects <span class="arrow">&rarr;</span></a>
    </section>
  )}
</Base>

<style>
  .hero {
    padding: 3rem 0 2rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .hero p {
    color: var(--color-text-muted);
    font-size: 1.15rem;
    max-width: 36rem;
    line-height: 1.8;
  }

  .view-counter {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  #view-count {
    color: var(--color-accent);
    font-weight: 600;
  }

  .recent {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
  }

  .recent h2 {
    font-size: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .project-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-card {
    position: relative;
    display: flex;
    gap: 1.25rem;
    padding: 1.25rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-left: 3px solid var(--color-accent);
    border-radius: 0.5rem;
    transition: border-color 0.2s;
    align-items: start;
    cursor: pointer;
  }

  .project-card:hover {
    border-color: var(--color-accent);
  }

  .project-thumb {
    width: 7rem;
    height: 7rem;
    object-fit: cover;
    border-radius: 0.375rem;
    flex-shrink: 0;
  }

  .project-info {
    flex: 1;
    min-width: 0;
  }

  .project-title {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .project-desc {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-top: 0.35rem;
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    flex-wrap: wrap;
  }

  .tags {
    display: flex;
    gap: 0.4rem;
  }

  .tag {
    background: var(--color-bg-alt);
    padding: 0.15em 0.55em;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    border: 1px solid var(--color-border);
  }

  .project-actions {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    margin-top: 0.75rem;
    font-size: 0.85rem;
  }

  .github-link {
    position: relative;
    z-index: 1;
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    color: var(--color-accent);
  }

  .github-link:hover {
    color: var(--color-accent-hover);
  }

  .github-link :global(.gh-icon) {
    width: 1em;
    height: 1em;
  }

  .details-link {
    margin-left: auto;
    color: var(--color-accent);
    transition: color 0.2s;
  }

  .details-link::after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .details-link:hover,
  .project-card:hover .details-link {
    color: var(--color-accent-hover);
  }

  .details-link .arrow,
  .view-all .arrow {
    display: inline-block;
    transition: transform 0.2s;
  }

  .details-link:hover .arrow,
  .project-card:hover .details-link .arrow,
  .view-all:hover .arrow {
    transform: translateX(4px);
  }

  .view-all {
    display: inline-block;
    margin-top: 1.5rem;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .view-all:hover {
    color: var(--color-accent-hover);
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 1.75rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .project-card {
      flex-direction: column;
    }

    .project-thumb {
      width: 100%;
      height: 10rem;
    }

    .project-actions {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .details-link {
      margin-left: 0;
    }
  }
</style>
