---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cloud portfolio - projects, architecture diagrams, and demos" } = Astro.props;
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="nav-inner">
        <a href="/" class="nav-brand">Sam</a>
        <div class="nav-links">
          <a href="/" class={pathname === "/" ? "active" : ""}>Home</a>
          <a href="/projects" class={pathname.startsWith("/projects") ? "active" : ""}>Projects</a>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Sam. Built with Astro.</p>
    </footer>
  </body>
</html>

<style>
  nav {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 1.5rem;
  }

  .nav-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-accent);
    letter-spacing: 0.02em;
  }

  .nav-brand::before {
    content: '>';
    display: inline-block;
    margin-right: 0.15em;
    opacity: 0;
    transform: translateX(-0.5em);
    transition: opacity 0.2s, transform 0.2s;
  }

  .nav-brand:hover::before {
    opacity: 1;
    transform: translateX(0);
  }

  .nav-brand:hover {
    color: var(--color-accent-hover);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    position: relative;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    padding-bottom: 0.25rem;
    transition: color 0.2s;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width 0.3s;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-accent);
  }

  .nav-links a:hover::after,
  .nav-links a.active::after {
    width: 100%;
  }

  main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1.5rem;
    flex: 1;
    width: 100%;
  }

  footer {
    border-top: 1px solid var(--color-border);
    padding: 1.5rem;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }
</style>
